<script>
	// Track mouse position for cursor glow effect
	const main = document.getElementById('main-content');
	if (main) {
		let isMoving = false;

		const updateMousePosition = (e) => {
			const mouseX = e.clientX;
			const mouseY = e.clientY;

			main.style.setProperty('--mouse-x', `${mouseX}px`);
			main.style.setProperty('--mouse-y', `${mouseY}px`);

			if (!isMoving) {
				isMoving = true;
				main.classList.add('cursor-moving');
			}
		};

		const handleMouseLeave = () => {
			isMoving = false;
			main.classList.remove('cursor-moving');
		};

		main.addEventListener('mousemove', updateMousePosition);
		main.addEventListener('mouseleave', handleMouseLeave);

		// Initialize position on load
		main.addEventListener('mouseenter', (e) => {
			updateMousePosition(e);
		});
	}
</script>
